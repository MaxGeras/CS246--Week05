<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maxlena.scripturereference.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:ems="10"
        android:id="@+id/editText1"
        android:layout_below="@+id/Book"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/editText3"
        android:layout_below="@+id/Verse"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:ignore="LabelFor" />

    <TextView
        android:text="@string/favorite_scripture_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Chapter"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="48dp"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/favorite_scripture_verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Verse"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/button"
        android:onClick="clickedButton"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/Book" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="123dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/Book"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:ignore="LabelFor" />

    <TextView
        android:text="@string/favorite_scripture_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Book"
        android:layout_marginTop="34dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
